script/source = "extends Sprite

var label_name := \"\"

func _ready():
	request_new_label()


func deliver_label(_image):
	var tex = ImageTexture.new()
	tex.create_from_image(_image)
	texture = tex
	modulate.a = 1


func _input(event):
	if event.is_action_pressed(\"ui_up\"):
		request_new_label()


func request_new_label():
	var random_jibberish = str( hash( randf() ) )
	modulate.a = 0
	_e.emit_signal(\"request_label\", label_name + \" #\" + random_jibberish, self)
"

