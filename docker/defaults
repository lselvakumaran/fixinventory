# The following are default values.
# They can be overridden by supplying the -e VAR=value option to the containerizer.

# The timezone this container is running in
TZ=${TZ:-Etc/UTC}

# User and group id for the user running valheim-server
PUID=${PUID:-0}
PGID=${PGID:-0}

# Supervisor http
SUPERVISOR_HTTP=${SUPERVISOR_HTTP:-false}
SUPERVISOR_HTTP_PORT=${SUPERVISOR_HTTP_PORT:-9001}
SUPERVISOR_HTTP_USER=${SUPERVISOR_HTTP_USER:-admin}
SUPERVISOR_HTTP_PASS=${SUPERVISOR_HTTP_PASS:-}

# Syslog settings
SYSLOG_REMOTE_HOST=${SYSLOG_REMOTE_HOST:-}
SYSLOG_REMOTE_PORT=${SYSLOG_REMOTE_PORT:-514}
SYSLOG_REMOTE_AND_LOCAL=${SYSLOG_REMOTE_AND_LOCAL:-true}

# Legacy Cloudkeeper startup
LEGACY_STARTUP=${LEGACY_STARTUP:-true}

# Which services to start
START_GRAPHDB=${START_GRAPHDB:-true}
START_TSDB=${START_TSDB:-true}
START_KEEPERCORE=${START_KEEPERCORE:-true}
START_COLLECTORD=${START_COLLECTORD:-true}
START_GRAPH_EXPORTER=${START_GRAPH_EXPORTER:-true}

# GraphDB settings
GRAPHDB_ROOT_PASSWORD=${GRAPHDB_ROOT_PASSWORD:-changeme}
GRAPHDB_SERVER_ENDPOINT=${GRAPHDB_SERVER_ENDPOINT:-tcp://127.0.0.1:8529}
GRAPHDB_DATABASE_DIRECTORY=${GRAPHDB_DATABASE_DIRECTORY:-/data/db}

# TSDB settings
TSDB_DATABASE_DIRECTORY=${TSDB_DATABASE_DIRECTORY:-/data/tsdb}
TSDB_CONFIG_FILE=${TSDB_CONFIG_FILE:-/usr/local/tsdb/prometheus.yml}
TSDB_RETENTION_TIME=${TSDB_RETENTION_TIME:-730d}

# Keepercore settings
KEEPERCORE_GRAPHDB_SERVER=${KEEPERCORE_GRAPHDB_SERVER:-http://127.0.0.1:8529}
KEEPERCORE_GRAPHDB_DATABASE=${KEEPERCORE_GRAPHDB_DATABASE:-cloudkeeper}
KEEPERCORE_GRAPHDB_LOGIN=${KEEPERCORE_GRAPHDB_LOGIN:-cloudkeeper}
KEEPERCORE_GRAPHDB_PASSWORD=${KEEPERCORE_GRAPHDB_PASSWORD:-changeme}

KEEPERCORE_URI=${KEEPERCORE_URI:-http://127.0.0.1:8080}
KEEPERCORE_WS_URI=${KEEPERCORE_WS_URI:-ws://127.0.0.1:8080}

# Collectord settings
COLLECTORD_KEEPERCORE_URI=${COLLECTORD_KEEPERCORE_URI:-$KEEPERCORE_URI}
COLLECTORD_KEEPERCORE_WS_URI=${COLLECTORD_KEEPERCORE_WS_URI:-$KEEPERCORE_WS_URI}

# graph_exporter settings
GRAPH_EXPORTER_KEEPERCORE_URI=${GRAPH_EXPORTER_KEEPERCORE_URI:-$KEEPERCORE_URI}
GRAPH_EXPORTER_KEEPERCORE_WS_URI=${GRAPH_EXPORTER_KEEPERCORE_WS_URI:-$KEEPERCORE_WS_URI}
