# The following are default values.
# They can be overridden by supplying the -e VAR=value option to the containerizer.

# The timezone this container is running in
TZ=${TZ:-Etc/UTC}

# User and group id for the user running valheim-server
PUID=${PUID:-0}
PGID=${PGID:-0}

# Pre-shared key to use between components
PSK=${PSK:-changeme}

# Supervisor http
SUPERVISOR_HTTP=${SUPERVISOR_HTTP:-false}
SUPERVISOR_HTTP_PORT=${SUPERVISOR_HTTP_PORT:-9001}
SUPERVISOR_HTTP_USER=${SUPERVISOR_HTTP_USER:-admin}
SUPERVISOR_HTTP_PASS=${SUPERVISOR_HTTP_PASS:-}

# Syslog settings
SYSLOG_REMOTE_HOST=${SYSLOG_REMOTE_HOST:-}
SYSLOG_REMOTE_PORT=${SYSLOG_REMOTE_PORT:-514}
SYSLOG_REMOTE_AND_LOCAL=${SYSLOG_REMOTE_AND_LOCAL:-true}

# Legacy Cloudkeeper startup
LEGACY_STARTUP=${LEGACY_STARTUP:-false}

# Which services to start
START_DNSMASQ=${START_DNSMASQ:-false}
START_GRAPHDB=${START_GRAPHDB:-true}
START_TSDB=${START_TSDB:-true}
START_CKCORE=${START_CKCORE:-true}
START_CKWORKER=${START_CKWORKER:-true}
START_CKMETRICS=${START_CKMETRICS:-true}

# GraphDB settings
GRAPHDB_ROOT_PASSWORD=${GRAPHDB_ROOT_PASSWORD:-changeme}
GRAPHDB_SERVER_ENDPOINT=${GRAPHDB_SERVER_ENDPOINT:-tcp://127.0.0.1:8529}
GRAPHDB_DATABASE_DIRECTORY=${GRAPHDB_DATABASE_DIRECTORY:-/data/db}

# TSDB settings
TSDB_DATABASE_DIRECTORY=${TSDB_DATABASE_DIRECTORY:-/data/tsdb}
TSDB_CONFIG_FILE=${TSDB_CONFIG_FILE:-/usr/local/tsdb/prometheus.yml}
TSDB_RETENTION_TIME=${TSDB_RETENTION_TIME:-730d}

# ckcore settings
CKCORE_GRAPHDB_SERVER=${CKCORE_GRAPHDB_SERVER:-http://127.0.0.1:8529}
CKCORE_GRAPHDB_DATABASE=${CKCORE_GRAPHDB_DATABASE:-cloudkeeper}
CKCORE_GRAPHDB_LOGIN=${CKCORE_GRAPHDB_LOGIN:-cloudkeeper}
CKCORE_GRAPHDB_PASSWORD=${CKCORE_GRAPHDB_PASSWORD:-changeme}

CKCORE_URI=${CKCORE_URI:-http://127.0.0.1:8900}
CKCORE_WS_URI=${CKCORE_WS_URI:-ws://127.0.0.1:8900}
CKCORE_PSK=${CKCORE_PSK:-$PSK}

# ckworker settings
CKWORKER_CKCORE_URI=${CKWORKER_CKCORE_URI:-$CKCORE_URI}
CKWORKER_CKCORE_WS_URI=${CKWORKER_CKCORE_WS_URI:-$CKCORE_WS_URI}
CKWORKER_PSK=${CKWORKER_PSK:-$PSK}

# ckmetrics settings
CKMETRICS_CKCORE_URI=${CKMETRICS_CKCORE_URI:-$CKCORE_URI}
CKMETRICS_CKCORE_WS_URI=${CKMETRICS_CKCORE_WS_URI:-$CKCORE_WS_URI}
CKMETRICS_PSK=${CKMETRICS_PSK:-$PSK}

# cksh settings
CKSH_PSK=${CKSH_PSK:-$PSK}
